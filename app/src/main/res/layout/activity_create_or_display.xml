<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moore.finalproject.CreateOrDisplayActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="Create New Job"
        android:id="@+id/createNewJobButton"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"
        android:onClick="createNewJobClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/createNewJobButton"
        android:textColor="#000000"
        android:text="View Existing Job"
        android:textAllCaps="false"
        android:onClick="viewExistingJobClick" />

</RelativeLayout>
